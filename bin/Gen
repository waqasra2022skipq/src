#!/usr/bin/perl
use lib 'C:/xampp/htdocs/src/lib';
use Accounts;
use myConfig;
############################################################################
# usage: Gen db db
#   creates the
############################################################################
# get the command name...
my ( $pw, $cmd ) = $0 =~ m/(.*\/)(.*)$/;
my $proc = shift;

# the databases to work with
my @DBS =
    $ARGV[0] eq 'test' ? Accounts->dbs('test')
  : scalar(@ARGV)      ? @ARGV
  :                      Accounts->dbs('active');
my $BIN = myConfig->cfg('BIN');

############################################################################
print qq|${cmd} Started: | . localtime() . qq|\n\n|;
print qq|======================================\n\n|;
foreach my $dbname (@DBS) {
    print qq|\n--------------------------------------\n|;
    print qq|database: ${dbname}\n|;
    main->$proc($dbname);
    print qq|--------------------------------------\n|;
}
print qq|\n\n======================================\n|;
print qq|${cmd} Completed: | . localtime() . qq|\n|;
exit;
############################################################################
sub lockTrPlan {
    my ( $self, $dbname ) = @_;
    print qq|call: lockTrPlan: ${dbname}...\n|;
    system("${BIN}/lockTrPlan DBNAME=${dbname}");
    return ();
}

sub expTrPlan {
    my ( $self, $dbname ) = @_;
    print qq|call: expTrPlan: ${dbname}...\n|;
    system("${BIN}/expTrPlan DBNAME=${dbname}");
    return ();
}
############################################################################
