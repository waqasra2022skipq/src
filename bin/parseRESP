#!/usr/bin/perl
use lib 'C:/xampp/htdocs/src/lib';
############################################################################
$file = $ARGV[0];
foreach my $file (@ARGV) {

    #print qq|\nparse file: $file\n|;
    if ( open( FILE, $file ) ) {
        while ( $in = <FILE> ) {
            foreach my $line ( split( '>', $in ) ) { print qq|${line}>\n|; }
        }
        close(FILE);
    }
}
exit;
################################################################
