            '99306', '99307', '99308', '99309', '99310', '99315',
            '99316', '99341', '99342', '99344', '99345', '99347',
            '99348', '99349', '99350', '99424', '99426', '99487',
            '99490', '99491', '99497', 'G0101', 'G0270', 'G0271',
