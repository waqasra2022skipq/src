select xSC.SCID, xSC.SCNum, xSC.InsID, xInsurance.Name, xSC.SCName, xSC.ServiceType, xCredentials.Abbr, xSCRestrictions.Descr as ResDescr, xSC.Restriction from xSC left join xInsurance on xInsurance.ID=xSC.InsID left join okmis_config.xCredentials on xCredentials.ID=xSC.CredID left join okmis_config.xSCRestrictions on xSCRestrictions.ID=xSC.Restriction where xSC.Active=1 and (xSC.CredID is null or (xSC.InsID='314' and xSC.CredID='38') or (xSC.InsID='100' and xSC.CredID='51') or (xSC.InsID='100' and xSC.CredID='38'))and (xSC.InsID is null or xSC.InsID='100')  order by xInsurance.Name, xSC.ServiceType, xSC.SCName, xSC.SCNum

